{
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "downlevelIteration": true,
    "lib": ["esnext", "DOM"],
    "types": ["vitest/globals"],
    "paths": {
      "@mini-vue/*": ["packages/*/src"]
    }
  },
  "include": ["packages/*/src", "packages/*/__tests__"],
  "exclude": [
    "node_modules"
  ]
}
